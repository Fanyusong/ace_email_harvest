<div class="container-fluid">
  <div class="row">
    <%= line_chart @open_count.count, min: 0, max: @max_number , xtitle: "Date", ytitle: "Number Of Opened Mail" %>
  </div>
  <div class="row">
    <h3>Progress:</h3>
    <div class="progress">
      <div class="progress-bar progress-bar-striped active" role="progressbar" aria-valuenow="<%= @percent_complete %>"
           aria-valuemin="0" aria-valuemax="100" style="width: <%= @percent_complete %>%">
        <%= @percent_complete %>% Complete
      </div>
    </div>
  </div>
  <div class="clear-fix"></div>
  <div class="row">
    <table class="table table-bordered">
      <thead>
      <tr>
        <th class="text-center">ID</th>
        <th class="text-center">Email</th>
        <th class="text-center">Opened At</th>
      </tr>
      </thead>
      <tbody>
        <% @list_email_campaign.each_with_index do |email_campaign, index| %>
            <tr>
              <td class="text-center"><%= index + 1 %></td>
              <td class="text-center"><%= email_campaign.to %></td>
              <td class="text-center"><%= email_campaign.opened_at %></td>
            </tr>
        <% end %>
      </tbody>
    </table>
    <div align="center"><%= will_paginate @list_email_campaign, renderer: BootstrapPagination::Rails %></div>
  </div>
</div>
