<div class="row" id="search-email">
  <h3>Verify the existence of Email </h3>
  <%= form_tag('/user/search', method: "get") do %>
    <div class="form-group row no-padding text-center col-md-12">
      <div class="col-md-9">
        <%= text_field_tag :email,
                             params[:email],
                             placeholder: 'Enter email',
                             autofocus: true,
                             class: 'form-control search-box' %>
      </div>
      <div class="col-md-2">
        <%= submit_tag("Search", class: "form-control btn btn-danger")%>
      </div>
    </div>
  <% end %>
</div>