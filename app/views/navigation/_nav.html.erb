  <div class="container">
    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-responsive-collapse">
      <span class="icon-bar"></span>
    </button>
    <a class="navbar-brand" href="/">AceEmailHarvest</a>
    <div class="navbar-collapse collapse navbar-responsive-collapse">
      <ul class="nav navbar-nav">
        <li><%= link_to "Search", "/search"  %></li>
        <% if current_user %>
            <li><%= link_to "Searching History", "/searching_history"  %></li>
            <li class="dropdown">
              <a class="dropdown-toggle" data-toggle="dropdown">
                Email Campaign
              </a>
              <ul class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                <li><a href="<%= new_email_campaign_path %>"  class="dropdown-item"><i class="glyphicon glyphicon-envelope"></i> New Email Campaign</a></li>
