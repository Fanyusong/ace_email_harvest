<div class="container-fluid">
  <h1>Email Content</h1>
  <div class="row">
    <div class = "well">
      <%= form_tag(email_campaigns_path, method: "post", multipart: true) do %>
          <div class="form-group">
            <%= label_tag :start_time %>
            <%= datetime_select :start_time, :date , prefix: :start_time, :order => [:month, :day, :year,:hour,:minute], class: "form-control" %>
          </div>
          <div class="form-group">
            <%= label_tag :end_time %>
            <%= datetime_select :end_time, :date, :order => [:month, :day, :year,:hour,:minute], class: "form-control" %>
          </div>
          <div class="form-group">
            <%= label_tag :from %>
            <%= text_field_tag :from, nil, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= label_tag :to %>
            <%= file_field_tag :file_data, class: "form-control" %>
          </div>
          <div class="form-group">
            <%= label_tag :subject %>
            <%= text_field_tag :subject,  nil, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= label_tag :content %>
            <%= text_area_tag :content, nil, class: 'form-control', style: "resize: vertical;", rows: 10, cols: 25 %>
          </div>
          <%= submit_tag "Send", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>